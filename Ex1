<!DOCTYPE html>

<html>

    <head>
    	<meta charset=“utf-8”>
    </head>

    <body>

        <script>
		
		var alcool = 3.16;
		var gasolina = 4.19;
		var codigo = prompt("Digite o código do combustivel. 1-Álcool ou 2-Gasolina");
		var litros = prompt("Digite a quantidade de litros.");
		
		if (codigo == 1){
			valAlcool = (alcool * litros);
			document.write("O valor a ser pago é " + valAlcool);
		} else if (codigo == 2){
			valGasolina = (gasolina * litros);
			document.write("O valor a ser pago é " + valGasolina);
		} else{
			document.write("O código digitado não existe, tente novamente!");
		}

        </script>

    </body>

</html>
